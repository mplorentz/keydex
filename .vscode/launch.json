{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Tests",
            "type": "dart",
            "request": "launch",
            "program": "test/",
            "args": [
                "--reporter",
                "expanded"
            ]
        },
        {
            "name": "Flutter: Run macOS",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "macos"
        },
        {
            "name": "Flutter: Run Chrome 1",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "chrome",
            "toolArgs": [
                "--web-port=8080"
            ]
        },
        {
            "name": "Flutter: Run Chrome 2",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "chrome",
            "toolArgs": [
                "--web-port=8081"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Flutter: Run macOS + 2 Chrome",
            "configurations": [
                "Flutter: Run macOS",
                "Flutter: Run Chrome 1",
                "Flutter: Run Chrome 2"
            ],
            "stopAll": true
        }
    ]
}